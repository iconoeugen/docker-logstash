#!/bin/bash

: ${PIPELINE_WORKERS:=2}
: ${PIPELINE_OUTPUT_WORKERS:=1}
: ${PIPELINE_BATCH_SIZE:=125}
: ${PIPELINE_BATCH_DELAY:=5}
: ${PIPELINE_UNSAFE_SHUTDOWN:=false}
: ${CONFIG_TEST_AND_EXIT:=false}
: ${CONFIG_RELOAD_AUTOMATIC:=false}
: ${CONFIG_RELOAD_INTERVAL:=3}
: ${CONFIG_DEBUG:=false}
: ${QUEUE_TYPE:=memory}
: ${QUEUE_PAGA_CAPACITY:=250mb}
: ${QUEUE_MAX_EVENTS:=0}
: ${QUEUE_MAX_BYTES:=1024mb}
: ${QUEUE_CHECKPOINT_ACKS:=1024}
: ${QUEUE_CHECKPOINT_WRITES:=1024}
: ${QUEUE_CHECKPOINT_INTERVAL:=1000}
: ${HTTP_HOST:=127.0.0.1}
: ${HTTP_PORT:=9600-9700}
: ${LOG_LEVEL:=info}
: ${XPACK_MONITORING_ENABLED:=false}
: ${XPACK_MONITORING_ELASTICSEARCH_URL:=[\'http://localhost:9200\']}
: ${XPACK_MONITORING_ELASTICSEARCH_USERNAME:=elasticsearch}
: ${XPACK_MONITORING_ELASTICSEARCH_PASSWORD:=changeme}
